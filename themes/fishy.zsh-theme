# ZSH Theme emulating the Fish shell's default prompt.

_fishy_collapsed_wd() {
  local i pwd
  pwd=("${(s:/:)PWD/#$HOME/~}")
  if (( $#pwd > 1 )); then
    for i in {1..$(($#pwd-1))}; do
      if [[ "$pwd[$i]" = .* ]]; then
        pwd[$i]="${${pwd[$i]}[1,2]}"
      else
        pwd[$i]="${${pwd[$i]}[1]}"
      fi
    done
  fi
  echo "${(j:/:)pwd}"
}

#Niket's
PROMPT='%(!.%{$fg_bold[red]%}.%{$fg[magenta]%})%n@%m %{$fg[blue]%}$(_fishy_collapsed_wd)'"${RPROMPT}"'%{$reset_color%}%(!.#.>) '
